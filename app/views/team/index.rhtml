<select id="change_team">
  <option value="">Change Team</option>
</select>
<h2>Team Home</h2>

<%= render :partial => '/scores/scoreboard' %>
<dl class="team_info">
  <dt><img src="http://cdn.nhl.com/penguins/images/logos/large.png" alt="" width="100" height="52" /></dt>
  <dd>
    <h3>Pittsburgh Penguins</h3>
    <p>Salary Cap: $60</p>
  </dd>
</dl>

<p class="team_record">Record: 9-0-1</p>
<div class="clear"></div>

<div class="tabs">
  <ul>
    <li><%= link_to "Active", "#active" %></li>
    <li><%= link_to "Reserves", "#reserves" %></li>
    <li><%= link_to "Farm Team", "#farm_team" %></li>
    <li><%= link_to "Exempt", "#exempt" %></li>
    <li><%= link_to "Injury Reserve", "#injury_reserve" %></li>
  </ul>  

  <div id="active">
    <table class="tbl_roster" summary="Active Players">
      <thead>
        <tr>
          <th scope="col" class="th_player_name">Name</th>
          <th scope="col" class="th_player_team">Team</th>
          <th scope="col" class="th_player_pos">Pos</th>
          <th scope="col" class="th_signed">Signed</th>
          <th scope="col" class="th_salary_yr">2010-11</th>
