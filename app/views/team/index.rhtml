          <th scope="col" class="th_salary_yr">2014-15</th>
          <th scope="col" class="th_status">Status</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= link_to "Sidney Crosby", player_profile_path() %></td>
